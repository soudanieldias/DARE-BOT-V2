{
  "name": "discord-bot",
  "version": "1.0.0",
  "description": "A Discord bot built with TypeScript and Discord.js",
  "main": "dist/index.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/glob": "^8.1.0",
    "discord.js": "^14.0.0",
    "dotenv": "^16.5.0",
    "glob": "^11.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "discord",
    "bot",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT"
}
